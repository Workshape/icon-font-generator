{
  "name": "icon-font-generator",
  "description": "Easy-to-use, pre-configured cli tool to generate webfont icon kits from a bunch of .svg files",
  "version": "1.0.7",
  "author": "Tancredi Trugenberger",
  "bin": {
    "icon-font-generator": "bin/icon-font-generator"
  },
  "dependencies": {
    "colors": "^1.1.2",
    "glob": "^7.1.1",
    "minimist": "^1.2.0",
    "webfonts-generator": "^0.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.44.2",
    "lint-staged": "^3.4.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.2.2"
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote true --trailing-comma all --print-width 60",
      "git add"
    ]
  },
  "main": "index.js",
  "pre-commit": "lint:staged",
  "repository": {
    "type": "git",
    "url": "https://github.com/Workshape/icon-font-generator.git"
  },
  "scripts": {
    "build": "rm -rf lib/* && babel src --ignore *.spec.js --out-dir lib --copy-files --source-maps",
    "lint": "eslint src/**",
    "lint:staged": "lint-staged",
    "prepublish": "npm run build",
    "watch": "babel -w -d ./lib ./src"
  }
}
